<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" spacing="10" padding="10">
    <!-- Komponent do wyboru pliku -->
    <Label text="Wybierz plik:" />
    <Button text="Przeglądaj..." onAction="#handleBrowseButtonAction" />

    <!-- Komponent do wyświetlania tekstu -->
    <Label text="Wyświetl tekst:" />
    <TextArea fx:id="displayTextArea" editable="false" prefRowCount="10" prefColumnCount="20" />

    <!-- Komponent do wprowadzania tekstu -->
    <Label text="Wprowadź tekst:" />
    <TextField fx:id="inputTextField" />
</VBox>
